<?xml version="1.0" encoding="utf-8"?>
<android.support.wearable.view.BoxInsetLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="matriks.wearproject.MainActivity"
    android:background="#1e4e93"
    tools:deviceIds="wear">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sayfalar"
        android:id="@+id/sayfalar"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        style="@style/btnStyleSeagull"
        android:layout_marginTop="8dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Haberler"
        android:id="@+id/haberler"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/sayfalar"
        android:layout_marginTop="63dp"
        style="@style/btnStyleSeagull"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Harita"
        android:id="@+id/harita"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/haberler"
        android:layout_marginTop="118dp"
        style="@style/btnStyleSeagull"
        />


</android.support.wearable.view.BoxInsetLayout>
